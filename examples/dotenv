GRAFANA_HOSTNAME=grafana.mydomain.tld

# InfluxDB secrets
INFLUXDB_ADMIN_PASSWORD=MyAdminPassword
INFLUXDB_ADMIN_USERNAME=MyAdmin
INFLUXDB_ADMIN_TOKEN=MyAdminToken

# Variables for mosquitto certificate
MOSQUITTO_BROKER_HOSTNAME=mqtt.mydomain.tld
MOSQUITTO_CERT_ORG="My Org."
MOSQUITTO_CERT_COMMON_STRING=/C=FI/ST=Pirkanmaa/L=Tampere/O=${MOSQUITTO_CERT_ORG}/

# Common Name (CN) for the root CA must be different than for broker and client
MOSQUITTO_ROOT_CA_SUBJECT=${MOSQUITTO_CERT_COMMON_STRING}/OU=CA/CN=${MOSQUITTO_CERT_ORG}
MOSQUITTO_BROKER_SUBJECT=${MOSQUITTO_CERT_COMMON_STRING}/OU=Server/CN=${MOSQUITTO_BROKER_HOSTNAME}
MOSQUITTO_CLIENT_SUBJECT=${MOSQUITTO_CERT_COMMON_STRING}/OU=Client/CN=${MOSQUITTO_BROKER_HOSTNAME}